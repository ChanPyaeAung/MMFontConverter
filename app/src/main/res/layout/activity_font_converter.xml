<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ninja.johnmajor.mmfontconverter.Activites.FontConverterActivity">
    
    <EditText
        android:id="@+id/etInput1"
        android:lines="10"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:inputType="text"
        android:hint="Enter Zawgyi Text"
        android:gravity="start"
        />


    <View
        android:layout_below="@+id/etInput1"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/etInput2"
        android:lines="10"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:inputType="text"
        android:hint="Enter Unicode Text"
        android:gravity="start"
        />

</RelativeLayout>
